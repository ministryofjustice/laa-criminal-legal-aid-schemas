{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "ministryofjustice/laa-criminal-legal-aid-schemas/main/schemas/1.0/general/person.json",
  "title": "Person",
  "description": "Holds attributes of a person",
  "type": "object",
  "properties": {
    "first_name": { "type": "string" },
    "last_name": { "type": "string" },
    "other_names": { "type": ["string", "null"] },
    "date_of_birth": { "type": "string", "format": "date" },
    "nino": { "type": "string" },
    "telephone_number": { "type": ["string", "null"] },
    "correspondence_address_type": { "type": "string" },
    "address": { "$ref": "#/definitions/address" },
    "correspondence_address": { "$ref": "#/definitions/address" }
  },
  "required": ["first_name", "last_name", "date_of_birth", "nino", "correspondence_address_type"],
  "definitions": {
    "address": { "$ref": "address.json" }
  }
}
