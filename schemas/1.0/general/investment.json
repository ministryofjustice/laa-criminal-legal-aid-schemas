{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "ministryofjustice/laa-criminal-legal-aid-schemas/main/schemas/1.0/general/investment.json",
  "title": "Investment",
  "description": "Holds attributes of an investment",
  "type": "object",
  "properties": {
    "investment_type": { "type": ["string"], "enum": ["bond", "pep", "share_isa", "stock", "unit_trust", "other"] },
    "description": { "type": "string" },
    "value": { "type": "integer" },
    "holder": { "type": ["string"], "enum": ["applicant", "applicant_and_partner", "partner"] }
  },
  "required": ["investment_type", "value", "description", "holder"]
}
