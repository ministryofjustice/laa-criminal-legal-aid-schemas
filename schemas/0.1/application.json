{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "ministryofjustice/laa-criminal-legal-aid-schemas/main/schemas/0.1/application.json",
  "title": "An application for criminal legal aid",
  "description": "Attributes of a criminal legal aid application",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "schema_version": { "type": "number" },
    "application_type": { "type": "string" },
    "reference": { "type": "number" },
    "created_at": { "type": "string", "format": "date-time" },
    "submitted_at": { "type": "string", "format": "date-time" },
    "date_stamp": { "type": "string", "format": "date-time" },
    "status": { "type": "string" },
    "client_details": {
      "type": "object",
      "properties": {
        "applicant": { "$ref": "#/definitions/person" },
        "partner": { "$ref": "#/definitions/person" }
      },
      "required": ["applicant"]
    },
    "case_details": {
      "type": "object",
      "properties": {
        "urn": { "type": ["string", "null"] },
        "case_type": { "type": "string" },
        "appeal_maat_id": { "type": ["string", "null"] },
        "appeal_with_changes_maat_id": { "type": ["string", "null"] },
        "appeal_with_changes_details": { "type": ["string", "null"] },
        "offences": {
          "type": "array",
          "items": { "$ref": "#/definitions/offence" }
        },
        "codefendants": {
          "type": "array",
          "items": { "$ref": "#/definitions/codefendant" }
        },
        "hearing_court_name": { "type": "string" },
        "hearing_date": { "type": "string", "format": "date" }
      },
      "required": ["case_type", "hearing_court_name", "hearing_date"]
    },
    "interests_of_justice": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    }
  },
  "required": ["id", "schema_version", "reference", "created_at", "submitted_at", "date_stamp", "status", "client_details"],
  "definitions": {
    "person": { "$ref": "general/person.json" },
    "offence": { "$ref": "general/offence.json" },
    "codefendant": { "$ref": "general/codefendant.json" }
  }
}
